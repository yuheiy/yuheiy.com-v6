---
import { Image } from 'astro:assets';
import { siteTitle } from '../consts';

interface Props {
  isHome?: boolean | undefined;
}

const isHome = Astro.props.isHome === true;

const Wrapper = isHome ? 'header' : 'nav';
const ParagraphOrHeading = isHome ? 'h1' : 'p';
const AnchorOrSpan = isHome ? 'span' : 'a';
---

<Wrapper>
  <ParagraphOrHeading class="text-sm/none text-dynamic-muted">
    <AnchorOrSpan class="flex w-fit items-center gap-x-3.5" href={isHome ? null : '/'}>
      <Image
        class="my-0.5 w-7 rounded-full ring-1 ring-dynamic"
        src={import('../assets/favicon.svg')}
        alt=""
      />
      {siteTitle}
    </AnchorOrSpan>
  </ParagraphOrHeading>
</Wrapper>
