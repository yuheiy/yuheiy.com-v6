---
export interface TeaserListItem {
  title: string;
  link: string;
  meta: string;
  description?: string | undefined;
}

interface Props {
  headingLevel: 2 | 3;
  items: TeaserListItem[];
}

const { headingLevel, items } = Astro.props;

const Heading = `h${headingLevel}`;
---

{
  items.map((item) => (
    <article class="[&+&]:mt-12">
      <header>
        <p class="text-xs text-dynamic-muted" set:html={item.meta} />
        <Heading class:list="mt-1 pb-1 [word-break:auto-phrase]">
          <a href={item.link} set:html={item.title} />
        </Heading>
      </header>
      {item.description && (
        <p
          class="mt-1 line-clamp-5 overflow-y-clip overflow-x-visible text-sm text-dynamic-muted [hanging-punctuation:allow-end]"
          set:html={item.description}
        />
      )}
    </article>
  ))
}
