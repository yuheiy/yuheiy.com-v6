---
export interface Props {
	items: {
		title: string;
		url: string;
		meta?: string;
		description?: string;
	}[];
	ordered?: boolean;
}

const { items, ordered = false } = Astro.props as Props;

const Component = ordered ? "ol" : "ul";
---

<Component class="space-y-8">
	{items.map((item) => (
		<li class="space-y-[0.125rem]">
			{item.meta && <p class="text-on-background-muted text-sm" set:html={item.meta} />}
			<p>
				<a href={item.url} set:html={item.title} />
			</p>
			{item.description && (
				<p class="text-on-background-muted text-sm" set:html={item.description} />
			)}
		</li>
	))}
</Component>
