---
import { loadDefaultJapaneseParser } from "budoux";
import { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
	as: Tag;
	title: string;
}>;

const { as: Tag = "div", title } = Astro.props;

const parser = loadDefaultJapaneseParser();
---

<Tag class="container space-y-8 @container">
	<h1
		class="text-2xl font-bold leading-tight kerning-all [text-wrap:balance] @sm:[word-break:keep-all]"
		set:html={parser.parse(title).join(`<wbr class="hidden @sm:inline">`)}
	/>
	<slot />
</Tag>
