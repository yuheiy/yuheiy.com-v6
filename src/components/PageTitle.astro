---
import { loadDefaultJapaneseParser } from "budoux";

export interface Props {
	Component?: keyof HTMLElementTagNameMap;
	title: string;
}

const { Component = "div", title } = Astro.props as Props;

const parser = loadDefaultJapaneseParser();
---

<Component class="container space-y-8 @container">
	<h1
		class="text-2xl font-bold leading-tight kerning-all @sm:[word-break:keep-all]"
		set:html={parser.parse(title).join(`<wbr class="hidden @sm:inline">`)}
	/>
	<slot />
</Component>
