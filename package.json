{
  "type": "module",
  "scripts": {
    "dev": "concurrently --raw \"npm:dev:*\"",
    "dev:astro": "astro dev --host",
    "dev:css": "chokidar \"src/styles/**/*.css\" --command \"touch tailwind.config.cjs\" --debounce 0 --silent",
    "build": "astro check && tsc && astro build",
    "preview": "astro preview",
    "lint": "concurrently --raw \"npm:lint:*\"",
    "lint:prettier": "prettier . --check",
    "lint:eslint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix"
  },
  "dependencies": {
    "@astrojs/check": "0.3.4",
    "@astrojs/mdx": "2.0.3",
    "@astrojs/rss": "4.0.1",
    "@astrojs/sitemap": "3.0.4",
    "@astrojs/tailwind": "5.1.0",
    "@tailwindcss/container-queries": "0.1.1",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "astro": "4.0.9",
    "astro-embed": "0.6.1",
    "chokidar-cli": "3.0.0",
    "concurrently": "8.2.2",
    "dayjs": "1.11.10",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-astro": "0.31.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-tailwindcss": "3.13.1",
    "just-extend": "6.2.0",
    "just-safe-set": "4.2.1",
    "mdast-util-to-string": "4.0.0",
    "prettier": "3.1.1",
    "prettier-plugin-astro": "0.12.3",
    "prettier-plugin-css-order": "2.0.1",
    "prettier-plugin-tailwindcss": "0.5.10",
    "unist-util-select": "5.1.0",
    "unist-util-visit": "5.0.0"
  },
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "packageManager": "npm@10.2.5",
  "private": true
}
